{% extends "base.html.twig" %}

{% block title %} Articles {% endblock %}

{% block body %}
    {% include "security/admin/compte.nav.html.twig" %}

    <h1> Gestion des articles</h1>
    <a id="addPost" href="{{ path("ajouterArticle") }}">Ajouter un article +</a>

    <select name="listCategory" id="selectPost">
        <option value="all">Tous les articles</option>
        {% for category in categorys %}
            <option value="{{ category.id }}">{{ category.title }}</option>
        {% endfor %}
    </select>

    <div class="d-flex justify-content-between">
        <div class="d-flex flex-column">
            <h2 class="headPost">Titre de l'article</h2>
            {% for article in articles %}
                <a class="postLink" href="{{ path("show-article", {"slug": article.slug}) }}">{{ article.title }}</a>
            {% endfor %}
        </div>
        <div class="d-flex flex-column">
            <h2 class="headPost">Cat√©gorie</h2>
            {% for article in articles %}
                <div class="d-flex">
                    {% for categoryPost in article.category %}
                        <p>{{ categoryPost.title }}</p>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
        <div class="d-flex flex-column modifPostDiv">
            {% for article in articles %}
                <a class="modifPost" href="{{ path("modifierArticle", {"slug": article.slug}) }}"> Modifier </a>
            {% endfor %}
        </div>
        <div class="d-flex flex-column supPostDiv">
            {% for article in articles %}
                <button onclick="deleteConfirm({{ article.id }})" class="confirmSup">Supprimer</button>
            {% endfor %}
        </div>
    </div>
    {% for article in articles %}
        <div class="confirm" id="confirm{{ article.id }}">
            <p> Voulez-vous vraiment supprimer l'article "{{ article.title }}" ? </p>
            <a class="yesSup" href="{{ path("supprimerArticle", {"id": article.id}) }}"> Oui </a>
            <button onclick="cancelConfirm({{ article.id }})" class="noSup" >Non</button>
        </div>
    {% endfor %}

{% endblock %}

{% block javascripts %}
    <script>
        function sendAjaxController(id) {
            $.ajax({
                method: "POST",
                url: "{{ path("ajax_article") }}",
                data: {id: id},
                success: function (responses) {
                    console.log(responses);
                }
            });
        }

        $("#selectPost").change(function () {
            let id = $("#selectPost option:selected").val();
            //console.log(test);
            //$(".convocations").text("");
            sendAjaxController(id);
        });
    </script>
{% endblock %}