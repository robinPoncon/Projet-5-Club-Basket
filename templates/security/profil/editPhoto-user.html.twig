{% extends 'base.html.twig' %}

{% block title %} Modification photo profil {% endblock %}

{% block body %}
    <h1> Modifier votre photo de profil </h1>

    {{ form_start(formPhotoUser) }}
        <div class="divForm">
            <div class="errorForm">
                {{ form_errors(formPhotoUser.imageFile) }}
            </div>
            <div class="d-flex">
                {{ form_label(formPhotoUser.imageFile) }}
                {{ form_widget(formPhotoUser.imageFile) }}
            </div>
        </div>
        <button class="form-control submit position-relative" type="submit">Modifier</button>
    {{ form_end(formPhotoUser) }}

{% endblock %}