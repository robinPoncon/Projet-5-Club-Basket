{% extends 'base.html.twig' %}

{% block title %} Modification du profil {% endblock %}

{% block body %}
    {% include "security/compte.nav.html.twig" %}

    <h1> Modifier les informations du profil </h1>

    <div class="editInfosUser">
        {{ form_start(formInfosUser) }}
        <div class="divForm">
            <div class="errorForm">
                {{ form_errors(formInfosUser.username) }}
            </div>
            <div class="d-flex">
                {{ form_label(formInfosUser.username) }}
                {{ form_widget(formInfosUser.username) }}
            </div>
        </div>

        <div class="divForm">
            <div class="errorForm">
                {{ form_errors(formInfosUser.email) }}
            </div>
            <div class="d-flex">
                {{ form_label(formInfosUser.email) }}
                {{ form_widget(formInfosUser.email) }}
            </div>
        </div>

        <div class="divForm">
            <div class="errorForm">
                {{ form_errors(formInfosUser.nom) }}
            </div>
            <div class="d-flex">
                {{ form_label(formInfosUser.nom) }}
                {{ form_widget(formInfosUser.nom) }}
            </div>
        </div>

        <div class="divForm">
            <div class="errorForm">
                {{ form_errors(formInfosUser.prenom) }}
            </div>
            <div class="d-flex">
                {{ form_label(formInfosUser.prenom) }}
                {{ form_widget(formInfosUser.prenom) }}
            </div>
        </div>

        <button class="form-control submit" type="submit">Modifier</button>

        {{ form_end(formInfosUser) }}
    </div>


{% endblock %}