{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <h1>Mot de passe oublié</h1>

    <div class="position-relative">
        {{ form_start(emailForm) }}
        <div class="divForm">
            <div class="errorForm">
                {{ form_errors(emailForm.email) }}
            </div>
            <div class="d-flex">
                {{ form_label(emailForm.email) }}
                {{ form_widget(emailForm.email) }}
            </div>
        </div>

        <button class="form-control submit" type="submit">Envoyer</button>
        {{ form_end(emailForm) }}
    </div>

{% endblock %}