{% extends "base.html.twig" %}

{% block title %} Présentation du club {% endblock %}

{% block body %}
    <h1> La vie au club </h1>
    <h2> Présentation </h2>
    {% for category in article.category %}
        {% if category.title == "Club" %}
        <div class="postClub">
            <h3><em class="fas fa-basketball-ball"></em>{{ article.title }}</h3>
            <div>
                {{ article.content | raw}}
            </div>
        </div>
        {% endif %}
    {% endfor %}
    <h2> Trombinoscope - Membres du bureau </h2>
{% endblock %}