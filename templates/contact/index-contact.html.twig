{% extends 'base.html.twig' %}

{% block title %} Contact BCM {% endblock %}

{% block body %}
    <h1> Nous contacter </h1>

    {{ form_start(formContact) }}
        <div class="divForm">
            <div class="errorForm">
                {{ form_errors(formContact.surname) }}
            </div>
            <div class="d-flex">
                {{ form_label(formContact.surname) }}
                {{ form_widget(formContact.surname) }}
            </div>
        </div>

        <div class="divForm">
            <div class="errorForm">
                {{ form_errors(formContact.name) }}
            </div>
            <div class="d-flex">
                {{ form_label(formContact.name) }}
                {{ form_widget(formContact.name) }}
            </div>
        </div>

        <div class="divForm">
            <div class="errorForm">
                {{ form_errors(formContact.email) }}
            </div>
            <div class="d-flex">
                {{ form_label(formContact.email) }}
                {{ form_widget(formContact.email) }}
            </div>
        </div>

        <div class="divForm">
            <div class="errorForm">
                {{ form_errors(formContact.objet) }}
            </div>
            <div class="d-flex">
                {{ form_label(formContact.objet) }}
                {{ form_widget(formContact.objet) }}
            </div>
        </div>

        <div class="divForm">
            <div class="errorForm">
                {{ form_errors(formContact.message) }}
            </div>
            <div class="d-flex">
                {{ form_label(formContact.message) }}
                {{ form_widget(formContact.message) }}
            </div>
        </div>

        <button class="form-control submit" type="submit">Envoyer</button>

    {{ form_end(formContact) }}

{% endblock %}
