
    <div id="nomClub">
        <h2 id="name"><a href="{{ path("home") }}">BASKET CLUB MEXIMIEUX</a></h2>
        <h2 class="nameMobile">
            <img src="{{ asset("pictures/logo-meximieux.png") }}" alt="logo du club">
            <a href="{{ path("home") }}">BCM</a>
        </h2>
        <div id="connexion">
            {% if not app.user %}
                <a href="{{ path("security_login") }}"> Connexion </a>
                <p> | </p>
                <a href="{{ path("security_registration") }}"> Inscription </a>
            {% else %}
                <a href="{{ path("homeCompte") }}">Espace Compte</a>
                <p> | </p>
                <a href="{{ path("security_logout") }}"> Déconnexion </a>
            {% endif %}
        </div>
    </div>
    <div class="menu-hamburger">
        <p> MENU </p>
        <div class="hamburger">
            <p class="trait-1"></p>
            <p class="trait-2"></p>
            <p class="trait-3"></p>
        </div>
        <div class="close-hamburger">
            <p class="trait-4"></p>
            <p class="trait-5"></p>
        </div>
    </div>
    <nav class="menu">
        <ul id="navigation-left">
            <li class="menu-titre"><a href="{{ path("home") }}"> Accueil </a></li>

            <li class="menu-titre"><a id="nav-club" href="#"> LE CLUB </a>
                <ul id="bloc-club">
                    <li><a href="{{ path("club") }}">La vie au club</a></li>
                    <li><a href="{{ path("clubInscription") }}">Infos Inscription</a></li>
                </ul>
            </li>

            <li class="menu-titre"><a href="#" id="nav-team"> EQUIPES </a>
                <ul id="bloc-team">
                    <li class="d-flex justify-content-between"><a href="#" id="boyTeam"> Garçons </a>
                        <ul id="listBoy">
                            {% for equipe in equipes.findAll() %}
                                {% if equipe.type == "garçons" %}
                                    <li><a href="{{ path("equipe", {"slug": equipe.slug, "type": equipe.type}) }}">
                                            {{ equipe.name }} </a></li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </li>
                    <li class="d-flex justify-content-between"><a href="#" id="girlTeam"> Filles </a>
                        <ul id="listGirl">
                            {% for equipe in equipes.findAll() %}
                                {% if equipe.type == "filles" %}
                                    <li><a href="{{ path("equipe", {"slug": equipe.slug, "type": equipe.type}) }}">
                                        {{ equipe.name }} </a></li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </li>
                    <li class="d-flex justify-content-between"><a href="#" id="loisirTeam"> Loisir </a>
                        <ul id="listLoisir">
                            {% for equipe in equipes.findAll() %}
                                {% if equipe.type == "loisir" %}
                                    <li><a href="{{ path("equipe", {"slug": equipe.slug, "type": equipe.type}) }}">
                                            {{ equipe.name }} </a></li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </li>
                </ul>
            </li>
        </ul>

        <div id="logo">
            <a href="{{ path("home") }}"><img src="{{ asset("pictures/logo-meximieux.png") }}" alt="logo club de basket de Meximieux"></a>
        </div>

        <ul id="navigation-right">
            <li class="menu-titre"><a href="#"> PHOTOS </a></li>

            <li class="menu-titre"><a href="{{ path("tournois") }}"> TOURNOIS </a></li>

            <li class="menu-titre"><a href="{{ path("contact") }}"> CONTACT </a></li>
        </ul>
    </nav>
