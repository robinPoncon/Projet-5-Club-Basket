{% extends "base.html.twig" %}

{% block title %} Ajout d'une couleur {% endblock %}

{% block body %}
    {% include "security/compte.nav.html.twig" %}
    <h1>Ajouter une couleur</h1>
    <div class="addColorForm">
        {{ form_start(formColor) }}
            <div class="divForm">
                <div class="errorForm">
                    {{ form_errors(formColor.name) }}
                </div>
                <div class="d-flex">
                    {{ form_label(formColor.name) }}
                    {{ form_widget(formColor.name) }}
                </div>
            </div>
            <button class="form-control submit" type="submit">Ajouter</button>
        {{ form_end(formColor) }}
    </div>

{% endblock %}