{% extends "base.html.twig" %}

{% block title %} Modification d'un sponsor {% endblock %}

{% block body %}
    {% include "security/compte.nav.html.twig" %}
    <h1>Modifier le sponsor</h1>

    <div class="addTeamForm">
        {{ form_start(formSponsor) }}
        <div class="d-flex justify-content-center blocPhotoEdit">
            {% for photoSponsor in photoSponsors %}
                <div class="d-flex flex-column divPhoto">
                    <img src="{{ asset(vich_uploader_asset(photoSponsor, "imageFile") | imagine_filter("equipeModif")) }}"
                         alt="photo d'un sponsor">
                    <a href="{{ path("supprimerPhotoSponsor", {"id": photoSponsor.id}) }}">Supprimer</a>
                </div>
            {% endfor %}
        </div>

        <div class="divForm">
            <div class="errorForm">
                {{ form_errors(formSponsor.images) }}
            </div>
            <div class="d-flex">
                {{ form_label(formSponsor.images) }}
                {{ form_widget(formSponsor.images) }}
            </div>
        </div>
        <button class="form-control submit" type="submit">Modifier</button>
        {{ form_end(formSponsor) }}
    </div>
{% endblock %}